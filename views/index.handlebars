
<div class="row">
            <img class="rounded mx-auto d-block" src="..\assets\img\burrito.png" alt="burrito">
        </div>

<div class="row">

<div class="rounded mx-auto d-block">
<ul class="list-group">
  <li class="list-group-item font-weight-bold">Burritos Eaten</li>
  {{#each burritos}}
    {{#unless devoured}}
      {{> burritos/burrito-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="rounded mx-auto d-block">
<form class="create-form">

  <div class="form-group rounded mx-auto d-block">
    <label for="devo">What kind of burrito would you like to add?</label><br>
    <input type="radio" name="devoured" value="1" checked> To be eaten<br>
    <input type="radio" name="devoured" value="0"> Eaten
  </div>
  <div class="form-group">
    <label for="bu"></label>
    <input type="text" id="bu" name="burrito_name">
    <button type="submit">Add Burrito</button>
  </div>
</form>
</div>


<div class="rounded mx-auto d-block">
<ul class="list-group">
  <li class="list-group-item font-weight-bold">Burritos To Eat</li>
  {{#each burritos}}
    {{#if devoured}}
      {{> burritos/burrito-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>





</div>